---
import { getCollection } from "astro:content";
import Hero from "@/components/Hero.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import Section from "@/components/Section.astro";
import BlogPostCard from "@/components/BlogPostCard.astro";
import Layout from "@/layouts/Layout.astro";
import { KNOWN_TECH, ABOUT_ME } from "@/consts";
const posts = (await getCollection("games")).sort(
  (a, b) => (a.data.order || 0) - (b.data.order || 0)
);
---

<Layout title="Abran Jules | Gameplay Programmer">
  <Hero />
  <Section
    title="My Games"
    className={"bg-gradient-to-b from-black/70 from-[5%] to-black via-black"}
  >
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-4">
      {
        posts.map((post) => (
          <BlogPostCard
            slug={post.id}
            title={post.data.title}
            excerpt={post.data.description}
            gametype={post.data.gametype}
            image={post.data.heroImage}
          />
        ))
      }
    </div>
  </Section>
  <Section title="Hard Skills" full_screen={false}>
    <div class="w-full grid place-items-center">
      <div
        class="w-full gap-4 flex flex-wrap px-3 max-w-xl text-lg justify-center"
      >
        {KNOWN_TECH.map((x) => <Breadcrumb title={x} />)}
      </div>
    </div>
 <Section title="About Me">
  <div class="w-full grid place-items-center">
    <div class="max-w-4xl text-xl md:text-lg opacity-90 text-center">
      {ABOUT_ME.split(/\n\s*\n/).map((paragraph) => (
        <p class="mb-4">{paragraph.trim()}</p>
      ))}
    </div>
  </div>
</Section>
</Layout>
